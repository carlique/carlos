# Project root is the EDK2 WORKSPACE root
export WORKSPACE="$PWD"

# EDK2 tools location
export EDK_TOOLS_PATH="$PWD/vendor/edk2/BaseTools"

# Tell EDK2 where to find packages:
# - upstream edk2 packages
# - your own packages (in this repo root)
export PACKAGES_PATH="$PWD/vendor/edk2:$PWD"

# Use Python 3
export PYTHON_COMMAND=python3

# LLVM tools (clang, lld, llvm-objcopy, llvm-rc)
export LLVM_BIN="$(brew --prefix llvm)/bin"
export CLANG_BIN="$LLVM_BIN/"

# Put EDK2 build wrappers + LLVM on PATH
export PATH="$EDK_TOOLS_PATH/BinWrappers/PosixLike:$LLVM_BIN:$PATH"
